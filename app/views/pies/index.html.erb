<li><%= link_to('New Pie', 'pies/new') %></li>

<h1>Your Pies</h1>
<p>Manage the pies you're eating: </p>

<% @pies.each do |pie| %>
  <ul class=<%="#{pie.id}"%>>
    <li><%= link_to(pie.name,  "/pies/#{pie.id}") %></li>
    <li><%= link_to("Edit",  "/pies/#{pie.id}/edit") %></li>
    <li><%= link_to('Delete', pie, :method => 'delete', :data => {:confirm => 'Are you sure?'}) %></li>
  </ul>
<% end %>